{
  "version": "10.2.0",
  "changelog": {
    "repo": "wepublish/wepublish",
    "cacheDir": ".changelog",
    "labels": {
      "PR: Breaking Change :boom:": ":boom: Breaking Change",
      "PR: New Feature :heart:": ":heart: New Feature",
      "PR: Bug Fix :bug:": ":bug: Bug Fix",
      "PR: Polish :nail_care:": ":nail_care: Polish",
      "PR: Docs :memo:": ":memo: Documentation",
      "PR: Internal :house:": ":house: Internal",
      "PR: Revert :leftwards_arrow_with_hook:": ":leftwards_arrow_with_hook: Revert"
    }
  },
  "command": {
    "version": {
      "allowBranch": ["master", "r/*"],
      "changelog": false
    },
    "publish": {
      "ignoreChanges": ["*.md", "*.txt"],
      "message": "chore(release): publish %s"
    }
  },
  "packages": ["apps/editor", "libs/analytics", "libs/api", "libs/nest-modules"]
}
