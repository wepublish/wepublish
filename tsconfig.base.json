{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wepublish/analytics": ["libs/analytics/src/index.ts"],
      "@wepublish/api": ["libs/api/src/index.ts"],
      "@wepublish/api/seed": ["libs/api/prisma/seed.ts"],
      "@wepublish/authentication/api": ["libs/authentication/api/src/index.ts"],
      "@wepublish/editor/api-v2": ["libs/editor/api-v2/src/index.ts"],
      "@wepublish/editor/api": ["libs/editor/api/src/index.ts"],
      "@wepublish/membership/api": ["libs/membership/api/src/index.ts"],
      "@wepublish/membership/editor": ["libs/membership/editor/src/index.ts"],
      "@wepublish/navigation/website": ["libs/navigation/website/src/index.ts"],
      "@wepublish/nest-modules": ["libs/nest-modules/src/index.ts"],
      "@wepublish/permissions/api": ["libs/permissions/api/src/index.ts"],
      "@wepublish/ui": ["libs/ui/src/index.ts"],
      "@wepublish/user/api": ["libs/user/api/src/index.ts"],
      "@wepublish/website-builder": ["libs/website-builder/src/index.ts"],
      "@wepublish/website": ["libs/website/src/index.ts"],
      "@wepublish/website/api-v2": ["libs/website/api-v2/src/index.ts"],
      "@wepublish/website/api": ["libs/website/api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
