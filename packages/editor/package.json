{
  "name": "@wepublish/editor",
  "version": "8.1.0",
  "description": "We.publish CMS Editor",
  "keywords": [
    "editor",
    "react",
    "postgres",
    "publishing",
    "media",
    "newspaper",
    "cms",
    "subscription"
  ],
  "homepage": "https://github.com/wepublish/wepublish",
  "bugs": {
    "url": "https://github.com/wepublish/wepublish/issues",
    "email": "development@wepublish.ch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wepublish/wepublish.git",
    "directory": "packages/editor"
  },
  "bin": "./bin/run-server.js",
  "main": "./dist/server/index.js",
  "license": "MIT",
  "scripts": {
    "setup": "shx cp .env.example .env",
    "build": "run-p build:client build:server",
    "build:client": "webpack --mode development",
    "build:server": "tsc -b ./src/shared ./src/server",
    "build:production": "webpack --mode production && yarn build:server",
    "watch": "npm-run-all copy-license --parallel watch:*",
    "watch:client": "run-p watch:client:*",
    "watch:server": "run-p watch:server:*",
    "watch:server:start": "nodemon -r dotenv/config --inspect=0.0.0.0:9230 ./bin/run-server.js",
    "watch:server:build": "tsc -b ./src/shared ./src/server --watch",
    "watch:client:build-ts": "tsc -b ./src/client --watch",
    "watch:client:build-wp": "webpack-dev-server --mode development --hot --inline",
    "watch:generate": "yarn generate:api --watch \"./src/**/*.graphql\"",
    "crlf": "crlf --set=LF dist/**/*",
    "clean": "shx rm -rf ./dist ./assets",
    "start": "./bin/run-server.js",
    "copy-license": "shx cp ../../LICENSE ./",
    "prepare": "run-s clean copy-license build crlf",
    "generate:api": "graphql-codegen -r dotenv/config --config codegen.yml",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@karma.run/webpack": "^0.0.3",
    "apollo-upload-client": "^16.0.0",
    "array-move": "^2.2.1",
    "browser-image-compression": "^1.0.16",
    "core-js": "^3.4.8",
    "csstype": "^3.0.2",
    "dangerously-set-html-content": "^1.0.9",
    "date-fns": "^2.24.0",
    "emoji-mart": "^3.0.0",
    "exifr": "^7.1.3",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "i18next": "^19.7.0",
    "i18next-browser-languagedetector": "^6.0.1",
    "nanoid": "^2.1.7",
    "pretty-bytes": "5.3.0",
    "react": "^17.0.2",
    "react-datepicker": "^4.1.1",
    "react-dom": "^17.0.2",
    "react-grid-layout": "^1.3.0",
    "react-hot-loader": "^4.13.0",
    "react-i18next": "^11.11.3",
    "react-icons": "^4.6.0",
    "react-page-visibility": "^6.4.0",
    "react-router-dom": "^6.3.0",
    "react-sortable-hoc": "^1.11.0",
    "regenerator-runtime": "^0.13.3",
    "rsuite": "^5.10.0",
    "slate": "^0.58.1",
    "slate-history": "^0.58.1",
    "slate-hyperscript": "^0.58.1",
    "slate-react": "^0.58.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.7.4",
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "^1.17.10",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.10",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.7",
    "@testing-library/react": "^12.0.0",
    "@types/apollo-upload-client": "^14.1.0",
    "@types/emoji-mart": "3.0.0",
    "@types/express": "^4.17.2",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.12.16",
    "@types/react": "^17.0.14",
    "@types/react-datepicker": "^4.1.3",
    "@types/react-dom": "^17.0.9",
    "@types/react-grid-layout": "^1.1.2",
    "@types/react-page-visibility": "^6.4.1",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-test-renderer": "^17.0.1",
    "@types/resize-observer-browser": "^0.1.6",
    "@types/webpack": "^4.35.3",
    "@types/webpack-dev-server": "^2.9.4",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "crlf": "^1.1.1",
    "css-loader": "^4.2.1",
    "dotenv": "^8.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fork-ts-checker-webpack-plugin": "^4.1.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "less": "^3.12.2",
    "less-loader": "^7.0.2",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "snapshot-diff": "^0.9.0",
    "style-loader": "^1.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.6.4",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.9.0"
  },
  "eslintConfig": {
    "plugins": [
      "i18next",
      "simple-import-sort"
    ],
    "rules": {
      "react/display-name": [
        0
      ],
      "react/jsx-boolean-value": [
        1
      ],
      "react/prop-types": [
        0
      ],
      "i18next/no-literal-string": [
        2,
        {
          "markupOnly": true,
          "ignoreAttribute": [
            "as",
            "dateFormat",
            "componentClass",
            "autoComplete",
            "controlId",
            "value",
            "name",
            "placement",
            "trigger",
            "dataKey",
            "eventKey",
            "appearance",
            "icon",
            "iconActive",
            "size",
            "display",
            "fixed",
            "flexDirection",
            "alignItems",
            "element",
            "variant",
            "color",
            "align",
            "position",
            "justifyContent",
            "justify",
            "overflow",
            "target",
            "spacing",
            "sdkLanguage",
            "axis",
            "flexWrap",
            "minHeight",
            "href",
            "fixed",
            "format",
            "stack",
            "backdrop",
            "data-testid",
            "to",
            "path"
          ],
          "ignoreComponent": [
            "code"
          ],
          "ignore": [
            "â€”",
            "&"
          ]
        }
      ],
      "simple-import-sort/imports": 1,
      "simple-import-sort/exports": 1,
      "import/first": 1,
      "import/newline-after-import": 1,
      "import/no-duplicates": 1
    },
    "extends": [
      "../../package.json"
    ],
    "ignorePatterns": [
      "src/client/api/index.ts"
    ]
  }
}
