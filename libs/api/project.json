{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api/src",
  "projectType": "library",
  "tags": ["publishable"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/api/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "inputs": [
        "default",
        "{workspaceRoot}/libs/block-content/api/**/*",
        "{workspaceRoot}/libs/image/api/**/*"
      ],
      "options": {
        "outputPath": "dist/libs/api",
        "tsConfig": "libs/api/tsconfig.lib.json",
        "packageJson": "libs/api/package.json",
        "main": "libs/api/src/index.ts",
        "assets": ["libs/api/*.md", "libs/api/prisma/**/*"],
        "external": "all",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "rootDir": ".",
        "updateBuildableProjectDepsInPackageJson": true
      }
    }
  }
}
